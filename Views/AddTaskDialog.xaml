<Window x:Class="Todo_List_WPF.Views.AddTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Todo_List_WPF.ViewModels"
        Title="Add/Edit Task" Height="300" Width="400">

    <!-- Binding the DataContext to the ViewModel -->
    <Window.DataContext>
        <vm:AddTaskDialogViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <!-- Task Title -->
            <TextBox Text="{Binding Title}" Margin="5" Height="25" VerticalAlignment="Center" />

            <!-- Task Description -->
            <TextBox Text="{Binding Description}" Margin="5" Height="60" VerticalAlignment="Center" AcceptsReturn="True"/>

            <!-- Due Date -->
            <DatePicker SelectedDate="{Binding DueTime}" Margin="5" Height="25" VerticalAlignment="Center"/>

            <!-- Notification Time (optional) -->
            <TextBox Text="{Binding NotificationMinutesBefore}" Margin="5" Height="25" VerticalAlignment="Center" />

            <!-- Buttons for Save and Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="75" Margin="5"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="75" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
